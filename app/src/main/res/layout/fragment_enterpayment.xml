<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akadasoftware.danceworksonline.EnterPaymentFragment"
    android:id="@+id/enterPayment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Enter Payment"
                android:textSize="25dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/charge"
                android:spinnerMode="dropdown"
                android:id="@+id/typeSpinner" />

            <TextView
                android:id="@+id/tvReference"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Reference"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etReference"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:hint="Reference" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Payment Description"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Description of Payment" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvChangeAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Hi"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvAmountHint"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:gravity="right"
                    android:paddingRight="5px"
                    android:text="Tap the amount to edit" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Different Card"
                android:id="@+id/btnUseDifferentCard" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Charge"
                android:id="@+id/btnPayment" />


        </LinearLayout>

    </ScrollView>

</FrameLayout>
