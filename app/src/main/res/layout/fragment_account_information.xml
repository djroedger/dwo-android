<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/accountSwitcher"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/svAccountInformationHome">>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Contact" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <Button
                        android:id="@+id/btnEditAccount"
                        android:layout_width="75dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:clickable="true"
                        android:text="Edit Account" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvacctname"
                    android:layout_width="@dimen/information_label"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="name: " />

                <TextView
                    android:id="@+id/tvacctnamefield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvacctaddress"
                    android:layout_width="@dimen/information_label"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="address: " />

                <TextView
                    android:id="@+id/tvacctaddressfield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvacctphone"
                    android:layout_width="@dimen/information_label"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="phone: " />

                <TextView
                    android:id="@+id/tvacctphonefield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvacctemail"
                    android:layout_width="@dimen/information_label"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="email: " />

                <TextView
                    android:id="@+id/tvacctemailfield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvstatus"
                    android:layout_width="@dimen/information_label"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="status: " />

                <TextView
                    android:id="@+id/tvstatusfield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCreditCard"
                    android:layout_width="@dimen/information_label"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Credit Card" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <Button
                        android:id="@+id/btnEditCreditCard"
                        android:layout_width="75dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:clickable="true"
                        android:text="Edit" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvcc"
                    android:layout_width="@dimen/information_label"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="credit card: " />

                <TextView
                    android:id="@+id/tvccfield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etcard" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/svEditAccountInformation">>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dip"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="Save" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="Cancel" />

                <TextView
                    android:id="@+id/tvFName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="First Name: " />

                <EditText
                    android:id="@+id/etFirst"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="First Name"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tvLName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="Last Name: " />

                <EditText
                    android:id="@+id/etLast"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="Last Name"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="Address: " />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="Street Address"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="City: " />

                <EditText
                    android:id="@+id/etCity"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="City"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tvState"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="State: " />

                <EditText
                    android:id="@+id/etState"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="State"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tvZip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="Zip Code: " />

                <EditText
                    android:id="@+id/etZip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="Zip Code"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="Phone:" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="Phone Number"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="Email:" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="Email"
                    android:padding="5dip" />

                <Spinner
                    android:id="@+id/AccountStatusSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:dropDownSelector="#000000"
                    android:spinnerMode="dropdown"
                    android:prompt="@string/status" />

            </LinearLayout>
        </FrameLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/svEditCreditCard">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dip"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnSaveCard"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:text="Save" />

                <Button
                    android:id="@+id/btnCancelSaveCreditCard"
                    android:text="Cancel"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:clickable="true" />


                <TextView
                    android:id="@+id/tvFNameCC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="First Name: " />

                <EditText
                    android:id="@+id/etFirstCC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="First Name"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tvLNameCC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="Last Name: " />

                <EditText
                    android:id="@+id/etLastCC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="Last Name"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tvNewCC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="Phone:" />

                <EditText
                    android:id="@+id/etNewCC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="Phone Number"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tvNewCCExp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="Email:" />

                <EditText
                    android:id="@+id/etNewCCExp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="Email"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tvAddressCC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="Address: " />

                <EditText
                    android:id="@+id/etAddressCC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="Street Address"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tvCityCC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="City: " />

                <EditText
                    android:id="@+id/etCityCC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="City"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tvStateCC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="State: " />

                <EditText
                    android:id="@+id/etStateCC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="State"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/tvZipCC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textStyle="bold"
                    android:text="Zip Code: " />

                <EditText
                    android:id="@+id/etZipCC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:hint="Zip Code"
                    android:padding="5dip" />


            </LinearLayout>
        </FrameLayout>
    </ScrollView>

</ViewFlipper>
