<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/svClassInformation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tvWhichSession"
                android:textSize="20dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Class Information" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <Button
                        android:id="@+id/btnEditClass"
                        android:layout_width="75dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:clickable="true"
                        android:text="Edit Class" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClassType"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:text="Type: " />

                <TextView
                    android:id="@+id/tvClassType1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClassLevel"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:text="Level: " />

                <TextView
                    android:id="@+id/tvClassLevel1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClassDescription"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:text="Description: " />

                <TextView
                    android:id="@+id/tvClassDescription1"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNumberEnrolled"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:text="Enrolled Students: " />

                <TextView
                    android:id="@+id/tvNumberEnrolled1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMaxNumber"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:text="Max # Students: " />

                <TextView
                    android:id="@+id/tvMaxNumber1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNumberWaitlisted"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:text="Waitlisted Students: " />

                <TextView
                    android:id="@+id/tvNumberWaitlisted1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:text="Start Time: " />

                <TextView
                    android:id="@+id/tvStartTime1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:text="End Time: " />

                <TextView
                    android:id="@+id/tvEndTime1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRoomNumber"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:text="Room #: " />

                <TextView
                    android:id="@+id/tvRoomNumber1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTuitionAmount"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:text="Tuition: " />

                <TextView
                    android:id="@+id/tvTuitionAmount1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDaysOfTheWeek"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:text="Days: " />

                <TextView
                    android:id="@+id/tvDaysOfTheWeek1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvInstructor"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:text="Instructor: " />

                <TextView
                    android:id="@+id/tvInstructor1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="right" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
