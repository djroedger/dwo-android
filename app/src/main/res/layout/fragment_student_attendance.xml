<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akadasoftware.danceworksonline.StudentAttendanceFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <!--Spinner width always has to be fill parent.!!!!!!!!!!!-->
        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sessionAttendanceSpinner"
            android:spinnerMode="dropdown" />


        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#33b5e6"
            android:dividerHeight="2px"
            android:layout_below="@+id/sessionAttendanceSpinner" />

        <TextView
            android:id="@android:id/empty"
            android:text="Student has no classes."
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="66dp" />


    </RelativeLayout>


</FrameLayout>
