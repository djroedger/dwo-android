<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akadasoftware.danceworksonline.ChargeCodeFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Enter New Charges"
                android:textSize="30dp"
                android:textStyle="bold" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/charge"
                android:spinnerMode="dropdown"
                android:id="@+id/chargecodespinner">

            </Spinner>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Description" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Description" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Amount" />

            <EditText
                android:id="@+id/etAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Amount" />

            <TextView
                android:id="@+id/tvDiscAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="DiscountAmount" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Total" />

            <EditText
                android:id="@+id/etTotal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Amount w/ Tax" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Charge"
                android:id="@+id/btnCharge" />


        </LinearLayout>

    </ScrollView>

</FrameLayout>
