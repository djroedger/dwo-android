<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akadasoftware.danceworksonline">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ActionBarCompact">
        <activity
            android:name=".Splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.akadasoftware.danceworksonline.Login" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home">
            <intent-filter>
                <action android:name="com.akadasoftware.danceworksonline.Home" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AccountInformation"
            android:label="@string/title_activity_account_information"
            android:parentActivityName=".Home">
            <intent-filter>
                <action android:name="com.akadasoftware.danceworksonline.AccountInformation" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="Home" />
        </activity>
        <activity
            android:name=".StudentInformation"
            android:label="@string/title_activity_student_information"
            android:parentActivityName=".Home">
            <intent-filter>
                <action android:name="com.akadasoftware.danceworksonline.StudentInformation" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="Home" />
        </activity>
        <activity
            android:name=".ClassInformation"
            android:label="@string/class_information"
            android:parentActivityName=".Home">
            <intent-filter>
                <action android:name="com.akadasoftware.danceworksonline.ClassInformation" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="Home" />
        </activity>
        <activity
            android:name=".Enroll"
            android:label="@string/title_activity_enroll">
            <intent-filter>
                <action android:name="com.akadasoftware.danceworksonline.Enroll" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ClassStudentList"
            android:label="@string/title_activity_class_listof_students">
            <intent-filter>
                <action android:name="com.akadasoftware.danceworksonline.ClassListOfStudents" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
